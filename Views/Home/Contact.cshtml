@page

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="display-4 text-center mb-4">Contact Us</h1>

            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">Get in Touch</h2>
                    <p>Have questions, suggestions, or want to contribute? Fill out the form below or reach us through our social media channels.</p>

                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject</label>
                            <select class="form-select" id="subject">
                                <option selected>General Inquiry</option>
                                <option>Article Submission</option>
                                <option>Tournament Information</option>
                                <option>Technical Issue</option>
                                <option>Advertising</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Other Ways to Connect</h2>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="bi bi-geo-alt-fill fs-1 text-primary mb-3"></i>
                                    <h5>Our Office</h5>
                                    <p>123 Foosball Street<br>Tehran, Iran<br>Postal Code: 1234567890</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <i class="bi bi-people-fill fs-1 text-primary mb-3"></i>
                                    <h5>Social Media</h5>
                                    <div class="d-flex justify-content-center gap-3">
                                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-telegram"></i></a>
                                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-instagram"></i></a>
                                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-whatsapp"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}