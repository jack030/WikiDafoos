@model WikiDafoos.Models.Article

@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <article>
                <header class="mb-4">
                    <h1 class="fw-bolder mb-1">@Model.Title</h1>
                    <div class="text-muted fst-italic mb-2">پست شده در تاریخ <br />@Model.CreationTime.ToString("MMMM dd, yyyy") </div>
                    <div class="d-flex gap-2 mb-3">
                        @foreach(var t in Model.Tags)
                        {
                            
                        <span class="badge bg-secondary">@t?.Name</span>
                       
                        }
                    </div>
                </header>

                <figure class="mb-4">
                    <img class="img-fluid rounded" src="@Model.Image" alt="Article image">
                </figure>

                <section class="mb-5">
                    <p class="fs-5 mb-4">
                        <div>
                            @Html.Raw(Model.Content)
                        </div>
                    </p>

                    
                   
                </section>
            </article>

            
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">Related Articles</div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li><a href="#">Advanced Shooting Techniques</a></li>
                        <li><a href="#">Foosball Rules Explained</a></li>
                        <li><a href="#">Choosing the Right Table</a></li>
                    </ul>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">Article Actions</div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">Share This Article</div>
                <div class="card-body">
                    <div class="d-flex justify-content-around">
                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-telegram"></i></a>
                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-whatsapp"></i></a>
                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-facebook"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}