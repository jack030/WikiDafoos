@model WikiDafoos.Models.Article

@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <article>
                <header class="mb-4">
                    <h1 class="fw-bolder mb-1">@Model.Title</h1>
                    <div class="text-muted fst-italic mb-2">Posted on @Model.CreationTime.ToString("MMMM dd, yyyy") by Author Name</div>
                    <div class="d-flex gap-2 mb-3">
                        <span class="badge bg-secondary">Techniques</span>
                        <span class="badge bg-secondary">Beginner</span>
                    </div>
                </header>

                <figure class="mb-4">
                    <img class="img-fluid rounded" src="https://via.placeholder.com/900x400" alt="Article image">
                </figure>

                <section class="mb-5">
                    <p class="fs-5 mb-4">@Model.Content</p>

                    <h2 class="fw-bolder mb-4 mt-5">Basic Rules</h2>
                    <p class="fs-5 mb-4">The game is played with two teams of two players each. Each team controls four rows of foos men:</p>
                    <ul class="fs-5 mb-4">
                        <li>Row 1 - Goalie (1 foos man)</li>
                        <li>Row 2 - Defense (2 foos men)</li>
                        <li>Row 3 - Midfield (3 foos men)</li>
                        <li>Row 4 - Attack (2 foos men)</li>
                    </ul>

                    <h2 class="fw-bolder mb-4 mt-5">Advanced Techniques</h2>
                    <p class="fs-5 mb-4">Mastering these techniques will give you an edge in competitive play:</p>
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5 class="card-title">The Snake Shot</h5>
                            <p class="card-text">Wrap your fingers around the handle and use a quick wrist motion to generate power.</p>
                        </div>
                    </div>
                </section>
            </article>

            <section class="mb-5">
                <div class="card bg-light">
                    <div class="card-body">
                        <h4 class="fw-bolder mb-4">Comments</h4>

                        <div class="d-flex mb-4">
                            <div class="flex-shrink-0">
                                <img class="rounded-circle" src="https://via.placeholder.com/50" alt="User image">
                            </div>
                            <div class="ms-3">
                                <div class="fw-bold">Commenter Name</div>
                                <div class="text-muted small">January 1, 2023</div>
                                Great article! Very helpful for beginners.
                            </div>
                        </div>

                        <form class="mb-4">
                            <div class="form-group">
                                <textarea class="form-control" rows="3" placeholder="Join the discussion..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary mt-2">Post Comment</button>
                        </form>
                    </div>
                </div>
            </section>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">Related Articles</div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li><a href="#">Advanced Shooting Techniques</a></li>
                        <li><a href="#">Foosball Rules Explained</a></li>
                        <li><a href="#">Choosing the Right Table</a></li>
                    </ul>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">Article Actions</div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">Share This Article</div>
                <div class="card-body">
                    <div class="d-flex justify-content-around">
                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-telegram"></i></a>
                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-whatsapp"></i></a>
                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-facebook"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}