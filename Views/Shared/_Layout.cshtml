
<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WikiDafoos</title>
    <link href="https://cdn.fontcdn.ir/Font/Persian/Vazir/Vazir.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Bootstrap CSS -->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    @RenderSection("Styles", required: false)
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Custom CSS for RTL and minor tweaks -->

</head>
<body class="layout-container">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <!-- SVG Logo (Right Side due to RTL) -->
                <a class="navbar-brand " href="/">
                    <img class="img-brand" src="~/images/logo-farsi.png" viewBox="0 0 24 24" fill="#007bff">

                    </img>
                </a>
                <!-- Hamburger Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" ></span>
                </button>
                <!-- Navbar Content -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Menu Items -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">صفحه اصلی</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">داشبورد</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Article" asp-action="Index">فهرست مقالات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">درباره ویکی دافوس</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">ارتباط با ما</a>
                        </li>
                        <div class="nav-item auth-buttons ">

                            <a href="/Account/Login" class="btn btn-outline-secondary auth">
                                <span>ورود/ثبت نام</span>
                            </a>
                        </div>
                    </ul>
                    <!-- Signup/Login Buttons -->
                   @*  <div class="auth-buttons d-flex">

                        <a href="/Account/Login" class="btn btn-outline-secondary auth">
                            <span>ورود/ثبت نام</span>
                        </a>
                    </div> *@
                </div>
            </div>
        </nav>
    </header>

    <div class="main">
        @* <main role="main" class="pb-3"> *@
        @RenderBody()
        @* </main> *@
    </div>

    <footer class="text-center py-3 bg-light">
        <div style="display: flex; justify-content: flex-end; align-items: center; gap: 10px; padding-left:30px">
            <img src="/images/logo1.svg" style="width: 40px; height: 40px; ">
            <img src="/images/logo2.svg" style="width: 40px; height: 40px; ">
            @* <p>© 2025 WikiDafoos</p> *@
        </div>
          @* <p>© 2025 WikiDafoos</p>  *@
        @* <div style="display: flex; justify-content: flex-start; align-items: center; gap: 10px; padding-right:30px">
            <img src="images/logo1.svg" style="width: 40px; height: 40px; ">
            <img src="images/logo2.svg" style="width: 40px; height: 40px; ">
            @* <p>© 2025 WikiDafoos</p> *@
        @* </div> *@ 
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>